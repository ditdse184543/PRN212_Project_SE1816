                Height="145" 
                Width="200" 
                StrokeDashOffset="0" 
                StrokeThickness="2" 
                Stretch="Fill"
                StrokeStartLineCap="Triangle"
                StrokeEndLineCap="Triangle"
                StrokeDashArray="500"
                Margin="0,-260,0,0"
                x:Name="MyPath"
                SnapsToDevicePixels="True">
                <Path.RenderTransform>
                    <ScaleTransform ScaleY="-1" CenterY="80"/>
                </Path.RenderTransform>
                <Path.Stroke>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop x:Name="B1" Color="Beige" Offset="0"/>
                        <GradientStop x:Name="B2" Color="Purple" Offset="0.65"/>
                        <GradientStop x:Name="B3" Color="Blue" Offset="0.95"/>
                    </LinearGradientBrush>
                </Path.Stroke>
                <Path.Triggers>
                    <EventTrigger RoutedEvent="Path.Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetName="MyPath" 
                                                Storyboard.TargetProperty="StrokeDashOffset"
                                                From="500" To="10"
                                                Duration="0:0:6"
                                                BeginTime="0:0:0"/>
                                <DoubleAnimation Storyboard.TargetName="B1" 
                                                Storyboard.TargetProperty="Offset"
                                                From="0" To="0.35"
                                                AutoReverse="True"
                                                Duration="0:0:3"
                                                BeginTime="0:0:0"/>
                                <DoubleAnimation Storyboard.TargetName="B2" 
                                            Storyboard.TargetProperty="Offset"
                                            From="0.65" To="0.85"
                                            AutoReverse="True"
                                            Duration="0:0:3"
                                            BeginTime="0:0:2.5"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Path.Triggers>
            </Path>
        </Grid>
        <Rectangle Fill="Transparent" Effect="{DynamicResource MaterialDesignShadowDepth5}" RadiusX="13.667" RadiusY="13.667" Margin="96,67,95,42" />
        <Image Width="90" Height="90" Margin="0,0,0,300" Effect="{DynamicResource MaterialDesignShadowDepth3}"/>
        <Grid Width="280" Height="288" VerticalAlignment="Top" Margin="35,104,35,0">
            <TextBlock Text="LOGIN" VerticalAlignment="top" HorizontalAlignment="Center" Margin="50" FontWeight="Bold" FontSize="20" Foreground="{StaticResource color9}" />
            <StackPanel VerticalAlignment="Center" Margin="15,0,15,0" Height="100">
                <TextBox x:Name="txtEmail" materialDesign:HintAssist.Hint="Email" Foreground="#BDBDBD" BorderBrush="DarkGray" Height="40" Margin="0,10,0,10" Padding="20,0,0,0">
                    <TextBox.Background>
                        <ImageBrush ImageSource="Images/user-icon.png"
                                    Stretch="None" AlignmentX="Left"/>
                    </TextBox.Background>
                </TextBox>
                <PasswordBox x:Name="txtPassword" materialDesign:HintAssist.Hint="Password" Foreground="#BDBDBD" BorderBrush="DarkGray" Height="40" Margin="0,0,0,0" Padding="20,0,0,0">
                    <PasswordBox.Background>
                        <ImageBrush ImageSource="Images/key-icon.png"
                                    Stretch="None" AlignmentX="Left"/>
                    </PasswordBox.Background>
                </PasswordBox>
            </StackPanel>
            <Button x:Name="btn_login" VerticalAlignment="Top" Content="Login"  Margin="49,230,155,0" Height="28" Effect="{DynamicResource MaterialDesignShadowDepth2}" Background="{StaticResource color8}" Click="btn_login_Click" />
            <Button x:Name="btn_back" VerticalAlignment="Top" Content="Back"  Margin="-100,-80,300,0" Height="28" Effect="{DynamicResource MaterialDesignShadowDepth2}" Background="{StaticResource color8}" Click="btn_back_Click" />
            <Button x:Name="btn_signup" Background="{StaticResource plainTextColor1}" Foreground="#FF391678" Content="Signup" Margin="140,200,64,0" Effect="{DynamicResource MaterialDesignShadowDepth2}" BorderBrush="#FF391678" Click="btn_signup_Click" />
            
        </Grid>
    </Grid>
</Window>
