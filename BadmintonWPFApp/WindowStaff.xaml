<Window x:Class="BadmintonWPFApp.WindowStaff"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BadmintonWPFApp"
        mc:Ignorable="d"
        Title="WindowStaff" Height="550" Width="800">
    <Border>
        
        <Border CornerRadius="50" BorderThickness="5" Padding="20">

            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#8BFFD0" Offset="0"/>
                    <GradientStop Color="#462AD8" Offset="0.75"/>
                    <GradientStop Color="#46B8DA" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#1B1448" Offset="0"/>
                    <GradientStop Color="#2C4D70" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="150"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <TextBlock x:Name="TxtAnime" Foreground="LightCyan" Margin="160,240,0,0" FontSize="40" FontFamily="Imprint MT Shadow">
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="TextBlock.Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <StringAnimationUsingKeyFrames Storyboard.TargetName="TxtAnime"
                                                                       Storyboard.TargetProperty="Text"
                                                                       BeginTime="0:0:6" Duration="0:0:12">
                                            <DiscreteStringKeyFrame Value="" KeyTime="0:0:0"/>
                                            <DiscreteStringKeyFrame Value="B" KeyTime="0:0:0.125"/>
                                            <DiscreteStringKeyFrame Value="Ba" KeyTime="0:0:0.25"/>
                                            <DiscreteStringKeyFrame Value="Bad" KeyTime="0:0:0.375"/>
                                            <DiscreteStringKeyFrame Value="Badm" KeyTime="0:0:0.45"/>
                                            <DiscreteStringKeyFrame Value="Badmi" KeyTime="0:0:0.5"/>
                                            <DiscreteStringKeyFrame Value="Badmin" KeyTime="0:0:0.625"/>
                                            <DiscreteStringKeyFrame Value="Badmint" KeyTime="0:0:0.75"/>
                                            <DiscreteStringKeyFrame Value="Badminto" KeyTime="0:0:0.875"/>
                                            <DiscreteStringKeyFrame Value="Badminton" KeyTime="0:0:1"/>
                                            <DiscreteStringKeyFrame Value="Badminton            " KeyTime="0:0:1.125"/>
                                            <DiscreteStringKeyFrame Value="Badminton            B" KeyTime="0:0:1.25"/>
                                            <DiscreteStringKeyFrame Value="Badminton            Bo" KeyTime="0:0:1.375"/>
                                            <DiscreteStringKeyFrame Value="Badminton            Boo" KeyTime="0:0:1.5"/>
                                            <DiscreteStringKeyFrame Value="Badminton            Book" KeyTime="0:0:1.625"/>
                                            <DiscreteStringKeyFrame Value="Badminton            Booki" KeyTime="0:0:1.85"/>
                                            <DiscreteStringKeyFrame Value="Badminton            Bookin" KeyTime="0:0:2.125"/>
                                            <DiscreteStringKeyFrame Value="Badminton            Booking" KeyTime="0:0:2.5"/>
                                            <DiscreteStringKeyFrame Value="Badminton            Booking." KeyTime="0:0:3.5"/>
                                        </StringAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>
                </Grid>

                <Path Grid.Row="0" Data="M 702 863 c -12 -2 -48 -28 -80 -56 c -45 -42 -103 -75 -282 -161 c -124 -60 -231 -115 -239 -122 c -13 -12 -12 -16 5 -35 c 26 -30 92 -59 135 -59 l 36 0 l -5 -53 c -4 -47 -1 -55 24 -81 c 26 -25 34 -28 81 -24 l 53 5 l 0 -37 c 0 -42 43 -135 67 -144 c 9 -4 22 -1 29 6 c 7 7 61 115 122 240 c 86 178 120 239 159 282 c 61 66 73 109 46 163 c -30 60 -88 89 -151 76 Z m 109 -52 c 36 -36 40 -95 10 -132 l -20 -24 l -73 73 l -73 73 l 24 20 c 37 30 96 26 132 -10 Z m -46 -190 c -14 -14 -23 -8 -87 56 c -63 63 -70 74 -58 88 c 12 14 21 8 87 -57 c 65 -64 71 -74 58 -87 Z m -161 90 c 16 -17 15 -19 -7 -34 c -23 -15 -26 -14 -47 8 c -21 22 -21 24 -3 34 c 26 15 38 13 57 -8 Z m -67 -78 c -16 -16 -18 -15 -47 12 l -30 29 l 22 12 c 20 11 26 10 48 -12 c 23 -22 23 -25 7 -41 Z m 127 15 c 8 -14 7 -22 -7 -35 c -16 -16 -18 -16 -39 4 c -18 19 -19 24 -8 38 c 16 19 39 16 54 -7 Z m -200 -17 c 16 -16 26 -33 23 -38 c -17 -28 -159 -124 -197 -134 c -52 -13 -113 -1 -151 30 l -24 19 l 154 76 c 84 42 156 76 160 76 c 4 0 20 -13 35 -29 Z m 149 -73 c -16 -18 -17 -17 -45 9 c -26 25 -27 28 -11 45 c 16 18 17 17 45 -9 c 26 -25 27 -28 11 -45 Z m 108 -4 l -12 -27 l -24 23 c -23 21 -23 24 -8 47 l 16 24 l 20 -20 c 18 -17 19 -24 8 -47 Z m -150 -48 c -110 -144 -166 -207 -187 -212 c -54 -14 -104 36 -90 90 c 4 18 43 55 114 111 l 107 84 l 32 -31 c 20 -19 29 -36 24 -42 Z m 107 22 c 17 -20 19 -26 8 -46 l -12 -22 l -28 29 c -24 25 -27 33 -16 46 c 17 20 23 19 48 -7 Z m -43 -68 l 28 -29 l -77 -158 l -77 -158 l -20 25 c -42 55 -47 144 -11 200 c 28 45 114 150 121 150 c 4 0 20 -13 36 -30 Z"
                      Height="250" Width="280"
                      StrokeDashOffset="0"
                      StrokeThickness="5"
                      Stretch="Fill" StrokeStartLineCap="Triangle" StrokeEndLineCap="Triangle"
                      StrokeDashArray="500"
                      x:Name="MyLogoPath"
                      Margin="-70,5,5,5" SnapsToDevicePixels="True">
                    <Path.Stroke>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop x:Name="Part1" Color="Blue" Offset="0"/>
                            <GradientStop x:Name="Part2" Color="Purple" Offset="0.65"/>
                            <GradientStop x:Name="Part3" Color="Beige" Offset="0.95"/>
                        </LinearGradientBrush>
                    </Path.Stroke>

                    <Path.Triggers>
                        <EventTrigger RoutedEvent="Path.Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="MyLogoPath"
                                                     Storyboard.TargetProperty="StrokeDashOffset"
                                                     From="500" To="200"
                                                     Duration="0:0:12"
                                                     BeginTime="0:0:0"/>
                                    <DoubleAnimation Storyboard.TargetName="Part1"
                                                     Storyboard.TargetProperty="Offset"
                                                     From="0" To="0.25"
                                                     AutoReverse="True"
                                                     BeginTime="0:0:0" Duration="0:0:3"/>
                                    <DoubleAnimation Storyboard.TargetName="Part2"
                                                     Storyboard.TargetProperty="Offset"
                                                     From="0.65" To="0.75"
                                                     AutoReverse="True"
                                                     BeginTime="0:0:3" Duration="0:0:3"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Path.Triggers>
                </Path>
                
                <DockPanel Grid.Row="1">
                    <Button DockPanel.Dock="Top" Margin="10" Padding="10" Click="Button_Checkin" Height="40" >
                        Checkin timeslot
                    </Button>
                    <Button DockPanel.Dock="Bottom" Margin="10" Padding="10" Click="Button_Report" Height="40">
                        Report court quality
                    </Button>
                    <!--<Button DockPanel.Dock ="Top" Margin="10" Padding="10" Click="Button_Log_Out">
                Log out
            </Button>-->
                </DockPanel>
            </Grid>
        </Border>
    </Border>
</Window>
